# Invoice App Server - Environment Variables
# Copy this file to .env and fill in your actual values

# Server Port
PORT=4000

# MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?appName=AppName
# Get this from MongoDB Atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?appName=invoiceapp

# JWT Secret - Use a long random string (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_long_random_jwt_secret_key_here_minimum_32_chars

# Webhook URL for automation (optional)
AUTOMATION_WEBHOOK_URL=https://example.com/webhook

# Environment (development, staging, production)
NODE_ENV=development
